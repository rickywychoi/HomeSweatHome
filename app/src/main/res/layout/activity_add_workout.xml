<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="20sp"
    tools:context=".AddWorkoutActivity">

    <TextView
        android:id="@+id/add_workout_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_marginBottom="50dp"
        android:text="@string/add_workout_title" />

    <EditText
        android:id="@+id/add_workout_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:hint="@string/add_workout_edit_text_hint"
        android:gravity="center"
        android:layout_marginBottom="50dp"/>
    <Button
        android:id="@+id/add_workout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_workout_btn"
        android:textSize="20sp"/>
</LinearLayout>
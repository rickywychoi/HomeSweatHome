<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/workout_play_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WorkoutPlayActivity">
    <LinearLayout
        android:id="@+id/workout_play_container_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.WorkoutPlayActivity"
        android:padding="10dp">
        <TextView
            android:id="@+id/keep_working"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center"
            android:text="@string/keep_working"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.057"
            android:layout_marginBottom="20dp" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="426dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/back"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/treadmill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Treadmill"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@android:drawable/checkbox_on_background" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp"
                    android:background="@drawable/back"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <TextView
                        android:id="@+id/stair_climber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Stair Climber"
                        android:textColor="#000000"
                        android:textSize="35sp" />
                    <FrameLayout
                        android:id="@+id/timer_fragment_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/elapsed_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Elapsed Time"
                        android:textSize="27sp" />
                    <TextView
                        android:id="@+id/duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:gravity="center"
                        android:text=""
                        android:textSize="27sp" />
                </LinearLayout>
                <Button
                    android:layout_width="149dp"
                    android:layout_height="wrap_content"
                    android:onClick="workoutDone"
                    android:text="Workout is considered to be done when you finish all of the exercises" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerInParent="true">
        <ImageButton
            android:id="@+id/pause_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="onClickPauseWorkout"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/pause"
            android:background="@null"/>
    </LinearLayout>
</RelativeLayout>

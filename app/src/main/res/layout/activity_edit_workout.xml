<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingVertical="30dp"
    android:paddingHorizontal="10dp"
    tools:context=".EditWorkoutActivity">

    <TextView
        android:id="@+id/workout_edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_marginBottom="20dp"
        android:text="Workout Title Sample" />

    <TextView
        android:id="@+id/add_exercise_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="30dp"
        android:text="@string/add_exercise_label" />

    <fragment
        android:id="@+id/add_exercise_fragment"
        android:name="com.example.homesweathome.AddExerciseFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>